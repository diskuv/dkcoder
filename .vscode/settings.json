{
    "cmake.configureOnOpen": false,
    "psi-header.config": {
        "forceToTop": true,
        "blankLinesAfter": 1
    },
    "psi-header.changes-tracking": {
        "isActive": true,
        "autoHeader": "autoSave",
        "enforceHeader": true,
        "exclude": [
            "ignore",
            "jsonc",
            "json",
            "markdown"
        ],
        "excludeGlob": [
            "**/settings.json",
            "**/COPYRIGHT",
            "**/LICENSE",
            "**/.ocamlformat",
            "**/coder-findlib.conf",
            "**/.gitattributes"
        ]
    },
    "psi-header.lang-config": [
        // We use block comments so we don't get trailing spaces on empty lines.
        {
            "language": "*",
            "rootDirFileName": "dk.cmd",
            "prefix": " * ",
            "suffix": "*",
            "begin": "/*************************************************************************",
            "end": " *************************************************************************/",
            "lineLength": 74,
            "ignoreLines": [
                "/* DO NOT EDIT THIS LINE"
            ]
        },
        {
            "language": "bat",
            "rootDirFileName": "dk.cmd",
            "prefix": "REM # ",
            "suffix": "#",
            "begin": "REM ##########################################################################",
            "end": "REM ##########################################################################",
            "lineLength": 78,
            "ignoreLines": [
                "@ECHO OFF",
                "@echo off"
            ]
        },
        {
            "language": "cmake",
            "rootDirFileName": "dk.cmd",
            "prefix": "# ",
            "suffix": "#",
            "begin": "##########################################################################",
            "end": "##########################################################################",
            "lineLength": 74,
            "ignoreLines": [
                "#!/bin/sh",
                "#!/bin/bash"
            ]
        },
        {
            "language": "ocaml",
            "rootDirFileName": "dk.cmd",
            "prefix": " * ",
            "suffix": "*",
            "begin": "(*************************************************************************",
            "end": " *************************************************************************)",
            "lineLength": 74
        },
        {
            "language": "ocaml.interface",
            "mapTo": "ocaml"
        },      
        {
            "language": "yaml",
            "mapTo": "cmake"
        },
        {
            "language": "shellscript",
            "mapTo": "cmake"
        }
    ],
    "psi-header.variables": [
        [
            "project",
            "dktool"
        ]
    ],
    "psi-header.templates": [
        {
            "language": "*",
            "template": [
                "File: <<project>><<filerelativepath>>",
                "",
                "Copyright <<filecreated('YYYY')>> Diskuv, Inc.",
                "",
                "Licensed under the Open Software License version 3.0",
                "(the \"License\"); you may not use this file except in compliance",
                "with the License. You may obtain a copy of the License at",
                "",
                "    https://opensource.org/license/osl-3-0-php/",
                ""
            ]
        }
    ],
    "ocaml.sandbox": {
        "kind": "opam",
        "switch": "Y:\\source\\dksdk-type"
    },
    "editor.wordWrapColumn": 78
}